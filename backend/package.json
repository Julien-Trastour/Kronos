{
  "name": "kronos-backend",
  "version": "1.0.0",
  "description": "API centralisée pour Kronos, gérant les utilisateurs, les permissions et la gestion des services.",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "NODE_ENV=production node src/server.js",
    "format": "biome format .",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --runInBand --detectOpenHandles",
    "lint": "biome lint .",
    "migrate": "prisma migrate dev",
    "generate": "prisma generate",
    "seed": "node prisma/seed.js",
    "db-push": "prisma db push"
  },
  "keywords": [
    "api",
    "express",
    "prisma",
    "postgresql",
    "authentication",
    "jwt"
  ],
  "author": "Hypérion Dev Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/HYPERION/Kronos-Backend"
  },
  "dependencies": {
    "@prisma/client": "^6.4.1",
    "argon2": "^0.41.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^6.9.0",
    "helmet": "^7.1.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "pg": "^8.13.3"
  },
  "devDependencies": {
    "prisma": "^6.4.1",
    "@jest/globals": "^29.7.0",
    "biome": "^0.3.3",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "supertest": "^7.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "config": {
    "dotenv_path": "./.env"
  }
}
